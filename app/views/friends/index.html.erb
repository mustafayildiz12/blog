<% if user_signed_in? %>

<h1>Friends</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">First Name</th>
      <th >Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col">Id</th>
    </tr>
  </thead>
  <tbody>
    <div id="friends">

  <% @friends.each do |friend| %>
  
    <%= render friend %>
    
  <% end %>
</div>
  </tbody>
</table>



<%= link_to "New friend", new_friend_path, class:"btn btn-outline-primary" %>
<% else%>
<h1>Blogs#init</h1>
<p>Please Login</p>


<% end -%>